<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="RoundedBtn.FillAccent" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/Title.White</item>
        <item name="android:background">@drawable/ripple_rounded_button_accent_fill</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">120dp</item>
    </style>
</resources>
